# Version: 1.0.0

# Node Environment
NODE_ENV=development

# API Configuration
REACT_APP_API_URL=http://localhost:3000
REACT_APP_API_VERSION=v1
REACT_APP_API_TIMEOUT=30000
REACT_APP_API_UPLOAD_TIMEOUT=60000
REACT_APP_API_RETRY_ATTEMPTS=3
REACT_APP_API_RETRY_DELAY=1000

# Internationalization
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_SUPPORTED_LANGUAGES=en,he,fr,es,de,ru,ar,zh
REACT_APP_RTL_LANGUAGES=he,ar
REACT_APP_ENABLE_RTL=true

# CDN Configuration
REACT_APP_CLOUDFRONT_URL=https://d1234.cloudfront.net
REACT_APP_CLOUDFRONT_REGION=eu-central-1

# Authentication
REACT_APP_GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
REACT_APP_FACEBOOK_APP_ID=your-facebook-app-id

# Payment Processing
REACT_APP_STRIPE_PUBLIC_KEY=your-stripe-public-key
REACT_APP_STRIPE_LOCALE=auto

# Monitoring and Analytics
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_SENTRY_DSN=your-sentry-dsn

# Feature Flags
REACT_APP_FEATURE_FLAGS=payments,notifications,translations

# Theme Configuration
REACT_APP_DEFAULT_THEME=light