{
  "compilerOptions": {
    "extends": "../../tsconfig.json",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@queues/*": ["queues/*"],
      "@jobs/*": ["jobs/*"],
      "@config/*": ["config/*"],
      "@shared/*": ["../../../../shared/*"]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}