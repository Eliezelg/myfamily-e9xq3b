{
  "name": "@myfamily/api-gateway",
  "version": "1.0.0",
  "description": "API Gateway service for MyFamily platform with enhanced security and monitoring capabilities",
  "main": "dist/app.js",
  "types": "dist/app.d.ts",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "node dist/app.js",
    "dev": "nodemon src/app.ts",
    "build": "rimraf dist && tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config jest.e2e.config.js",
    "test:security": "npm audit && snyk test",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky install",
    "clean": "rimraf dist coverage",
    "prebuild": "npm run clean",
    "postinstall": "npm run prepare"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.300.0",
    "@aws-sdk/client-ses": "^3.0.0",
    "@aws-sdk/cloudfront-signer": "^3.300.0",
    "@grpc/grpc-js": "^1.8.0",
    "@prisma/client": "^4.9.0",
    "@sentry/node": "^7.0.0",
    "axios": "^1.3.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.10.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.0.1",
    "inversify": "^6.0.1",
    "jsonwebtoken": "^9.0.0",
    "opossum": "^6.0.0",
    "prom-client": "^14.0.1",
    "rate-limiter-flexible": "^2.4.1",
    "reflect-metadata": "^0.1.13",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@jest/types": "^29.4.0",
    "@types/bull": "^4.10.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.15.0",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "nock": "^13.3.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.4",
    "rimraf": "^4.1.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  },
  "author": "MyFamily",
  "license": "UNLICENSED"
}